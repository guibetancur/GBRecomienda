<p id="notice"><%= notice %></p>

<h1>Recomendaciones</h1>

<table>
  <thead>
    <tr>
      <th>Categoría</th>
      <th>Url</th>
      <th>Nombre</th>
      <th>Descripción</th>
      <th>Llamadas</th>
      <th>Puntaje</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recommendations.each do |recommendation| %>
      <tr>
        <td><%= recommendation.category %></td>
        <td><%= recommendation.url %></td>
        <td><%= recommendation.name %></td>
        <td><%= recommendation.description %></td>
        <td><%= recommendation.calls %></td>
        <td><%= recommendation.score %></td>
        <td><%= link_to 'Ver', recommendation %></td>
        <td><%= link_to 'Editar', edit_recommendation_path(recommendation) %></td>
        <td><%= link_to 'Eliminar', recommendation, method: :delete, data: { confirm: 'Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Recomendación', new_recommendation_path %>
